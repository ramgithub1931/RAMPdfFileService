using Newtonsoft.Json;
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Diagnostics;
using System.IO;
using System.Linq;
using System.ServiceProcess;
using System.Text;
using System.Threading.Tasks;

namespace RAMPdfFileService
{
    public partial class RAMPdfFileService : ServiceBase
    {
        public RAMPdfFileService()
        {
            InitializeComponent();
        }

        protected override void OnStart(string[] args)
        {
            DirectoryWatcherConfiguration configuration = null;
            string configurationPath = Path.Combine(AppDomain.CurrentDomain.BaseDirectory, "config.json");

            if (File.Exists(configurationPath))
            {                
                using (StreamReader r = Helpers.GetStreamReader(configurationPath))
                {
                    string json = r.ReadToEnd();
                    configuration = JsonConvert.DeserializeObject<DirectoryWatcherConfiguration>(json);
                }
            }

            if (configuration != null)
            {
                DirectoryWatcher directoryWatcher = new DirectoryWatcher(configuration);

                StringBuilder sb = new StringBuilder();
                sb.AppendLine("RAMPdfFileServiceStarted");
                sb.AppendLine(String.Format("Watching at: {0}", directoryWatcher.Path));
                sb.AppendLine(String.Format("Internal buffer size: {0}", directoryWatcher.InternalBufferSize));
                sb.AppendLine(String.Format("Saving backups: {0}", directoryWatcher.DoSaveBackups));
                EventLogManager.WriteInformation(sb.ToString());
            }
            else
            {
                EventLogManager.WriteError(new Exception("No config.json file found."));
            }
        }

        protected override void OnStop()
        {
            EventLogManager.WriteInformation("Stopped.");
        }
    }
}
